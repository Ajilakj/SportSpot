{{!-- {{#if loggedIn}} --}}
<div class="row justify-space-between-md">
  <div class="login-card">
    <h2 class="page-title">You can edit your information here:</h2>
    <form class="form signup-form">
      <div class="form-group form-row">
        <label for="username-signup" class="form-column">Username:</label>
        <input class="form-input form-column" type="text" id="username-signup" />
      </div>
      <div class="form-group form-row">
        <label for="password-signup" class="form-column">Password:</label>
        <input class="form-input form-column" type="password" id="password-signup" />
      </div>
      <div class="form-group form-row">
        <label for="password-confirm" class="form-column">Confirm password:</label>
        <input class="form-input form-column" type="password" id="password-confirm" />
      </div>
      <div class="form-group form-row">
        <label for="email-signup" class="form-column">Email:</label>
        <input class="form-input form-column" type="text" id="email-signup" />
      </div>
      <div class="form-group form-row">
        <label for="firstName-signup" class="form-column">First name:</label>
        <input class="form-input form-column" type="text" id="firstName-signup" />
      </div>
      <div class="form-group form-row">
        <label for="lastName-signup" class="form-column">Last name:</label>
        <input class="form-input form-column" type="text" id="lastName-signup" />
      </div>
      <div class="form-group form-row">
        <label for="phone-signup" class="form-column">Phone number:</label>
        <input class="form-input form-column" type="text" id="phone-signup" />
      </div>
      <div class="form-group form-row">
        <label for="bio-signup" class="form-column">Bio:</label>
        <input class="form-input form-column" type="text" id="bio-signup" />
      </div>
      <div class="form-group">
        <button class="btn btn-primary update" type="submit">Update Changes</button>
      </div>
    </form>
  </div>
</div>
